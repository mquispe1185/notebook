<p style="color: green"><%= notice %></p>

<div class="row mb-3">
  <div class="col">
    <h3>Notes</h3>
  </div>
  <div class="col">
    <%= link_to "New note", new_note_path, class: 'btn btn-primary' %>
  </div>
</div>
<div data-controller="note">
  <table id="notes">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.body %></td>
        <td><%= note.date.strftime('%F') %></td>
        <td><%= link_to "Show", note, class: "btn btn-outline-secondary btn-sm"%>
          <%= link_to "Edit", edit_note_path(note), class: "btn btn-outline-success btn-sm" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>


